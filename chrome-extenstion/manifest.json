{
    "manifest_version": 3,
    "name": "Eleven Prompt",
    "version": "1.0.0",
    "description": "Enhance your AI prompts with intelligent suggestions",
    "permissions": [
        "storage",
        "activeTab",
        "identity",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://sora.chatgpt.com/*",
        "https://grok.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://sora.chatgpt.com/*",
                "https://grok.com/*",
                "https://gemini.google.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "src/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "AI Prompt Enhancer"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/suggestion-panel.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}